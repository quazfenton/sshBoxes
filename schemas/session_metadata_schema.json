{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Session Metadata Record",
  "description": "Schema for storing session metadata in sshBox system",
  "required": [
    "session_id",
    "container",
    "ssh_port",
    "ttl",
    "profile",
    "created_at",
    "user_id",
    "invited_by",
    "allowed_actions"
  ],
  "properties": {
    "session_id": {
      "type": "string",
      "description": "Unique identifier for the session"
    },
    "container": {
      "type": "string",
      "description": "Container name or ID"
    },
    "ssh_port": {
      "type": "integer",
      "description": "Port number for SSH access"
    },
    "host": {
      "type": "string",
      "description": "Host IP address for SSH access"
    },
    "user": {
      "type": "string",
      "description": "Username for SSH access"
    },
    "ttl": {
      "type": "integer",
      "description": "Time-to-live in seconds"
    },
    "profile": {
      "type": "string",
      "description": "Profile used for this session",
      "enum": ["dev", "debug", "secure-shell", "privileged"]
    },
    "created_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of creation"
    },
    "expires_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of expiration"
    },
    "ended_at": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of session end"
    },
    "user_id": {
      "type": "string",
      "description": "Identifier for the user who initiated the session"
    },
    "invited_by": {
      "type": "string",
      "description": "Identifier for the user who created the invite"
    },
    "allowed_actions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "List of allowed actions for this session"
    },
    "commands_executed": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time"
          },
          "command": {
            "type": "string"
          }
        }
      },
      "description": "Commands executed during the session (if auditing enabled)"
    },
    "recording_path": {
      "type": "string",
      "description": "Path to session recording if enabled"
    }
  }
}